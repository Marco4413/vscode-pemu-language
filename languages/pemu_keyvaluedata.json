{
    "comments": {
        "lineComment": "#"
    },
    "onEnterRules": [
        {
            "beforeText": "#\\s+[^\\s].*",
            "action": {
                "appendText": "# ",
                "indent": "none"
            }
        }
    ],
    "autoClosingPairs": [
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["\"", "\""],
        ["'", "'"]
    ]
}